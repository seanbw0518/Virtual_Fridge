<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MaterialComponents.BottomSheet.Modal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- NAME -->
    <TextView
        android:id="@+id/kitchen_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:textColor="@color/textInverse"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_huge" />

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/big_padding"
        android:layout_marginVertical="@dimen/small_padding"
        android:background="@color/divider" />

    <!-- EXPIRY DATE -->
    <TextView
        android:id="@+id/kitchen_item_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_padding"
        android:layout_marginVertical="@dimen/small_padding"
        android:textColor="@color/textInverse"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_small" />

    <!-- LOCATION -->
    <TextView
        android:id="@+id/kitchen_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_padding"
        android:layout_marginVertical="@dimen/small_padding"
        android:textColor="@color/textInverse"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_small" />

    <!-- TYPE -->
    <TextView
        android:id="@+id/kitchen_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_padding"
        android:layout_marginVertical="@dimen/small_padding"
        android:textColor="@color/textInverse"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_small"
        android:textStyle="italic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/big_padding"
        android:padding="@dimen/small_padding">

        <!-- BUTTONS -->
        <Button
            android:id="@+id/delete_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/small_padding"
            android:text="@string/button_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/small_padding"
            android:text="@string/button_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:layout_constraintStart_toEndOf="@id/add_to_shopping_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_to_shopping_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/small_padding"
            android:text="@string/button_add_to_shopping"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>