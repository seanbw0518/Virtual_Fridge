<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/small_padding">

    <!-- ICON -->
    <ImageView
        android:id="@+id/shopping_item_icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_width"
        android:layout_marginVertical="@dimen/small_padding"
        android:layout_marginStart="@dimen/small_padding"
        android:layout_marginEnd="@dimen/big_padding"
        android:contentDescription="@string/shopping_item_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- NAME -->
    <TextView
        android:id="@+id/shopping_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_padding"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginEnd="@dimen/big_padding"
        android:ellipsize="end"
        android:textColor="@color/textInverse"
        android:textSize="@dimen/text_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/shopping_item_check"
        app:layout_constraintStart_toEndOf="@id/shopping_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TYPE -->
    <TextView
        android:id="@+id/shopping_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textInverse"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/shopping_item_icon"
        app:layout_constraintTop_toBottomOf="@id/shopping_item_name" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/shopping_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/shopping_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/shopping_item_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>